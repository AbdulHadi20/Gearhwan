---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import SelectWrapper from '@/components/SelectWrapper.tsx';
import { Button } from '@/components/ui/button';

const herosection = {
  heading: "Discover Your Ideal Car",
  description: "Find your next ride here!",
};

const weekendOptions = [
  { label: "Going on road trips", value: "road-trips" },
  { label: "Staying in and relaxing", value: "relaxing" },
  { label: "Exploring the city", value: "city" },
  { label: "Outdoor adventures", value: "adventures" },
];

const bestDescribeOptions = [
  { label: "Bold and Adventurous", value: "bold-adventurous" },
  { label: "Sleek and Professional", value: "sleek-professional" },
  { label: "Elegant and Stylish", value: "elegant-stylish" },
  { label: "Practical and Relaxed", value: "practical-relaxed" },
];

const attentionOptions = [
  { label: "Love to stand out", value: "stand-out" },
  { label: "Prefer to blend in", value: "blend-in" },
  { label: "Depends on the situation", value: "depends-on-situation" },
];

const importanceDriveOptions = [
  { label: "Power and performance", value: "power-performance" },
  { label: "Comfort and space", value: "comfort-space" },
  { label: "Style and tech", value: "style-tech" },
  { label: "Efficiency and fuel", value: "efficiency-fuel" },
];

const movieGenreOptions = [
  { label: "Action", value: "action" },
  { label: "Comedy", value: "comedy" },
  { label: "Drama", value: "drama" },
  { label: "Documentary", value: "documentary" },
  { label: "Adventure", value: "adventure" },
];

const personalityOptions = [
  { label: "Adventurous", value: "adventurous" },
  { label: "Responsible", value: "responsible" },
  { label: "Stylish", value: "stylish" },
  { label: "Efficient", value: "efficient" },
  { label: "Spontaneous", value: "spontaneous" },
];
---

<Layout>

    <main>
		<div class="absolute inset-0 bg-[url('/buyacarheroimg.png')] bg-cover bg-center max-w-screen object-cover h-[75vh]">
			<div class="absolute inset-0 bg-black/40"></div>
		</div>


		<div class="container mx-auto lg:mt-42 mt-36 flex flex-col gap-5 items-center justify-center">

			<h1 class="relative z-10 sm:px-2 lg:px-0 lg:max-w-screen-2xl uppercase text-center text-accent text-2xl font-bold md:text-3xl lg:text-5xl text-wrap">
				{herosection.heading}
			  </h1>
			  <p class="relative z-10 sm:px-2 lg:px-0 mx-auto mt-2 md:mt-4 lg:max-w-screen-2xl text-center text-accent md:text-lg lg:text-xl text-wrap">
				{herosection.description}
			  </p>
		</div>
	</main>

	<section class="container mx-auto relative z-10 lg:max-w-screen-lg max-w-screen-sm lg:my-28 my-20 bg-accent p-4 rounded-2xl flex flex-col gap-5 items-center justify-center shadow-2xl">

		<p class="lg:text-3xl md:text-2xl text-xl font-bold uppercase text-destructive text-center text-wrap">Uncover Your Perfect Match</p>

		<p class="text-center text-wrap text-destructive lg:text-lg text-md max-w-2xl">
			Letâ€™s find a car that matches your vibe! Answer a few quick questions so we can recommend rides that suit your personality and lifestyle.
		</p>
		

		<!-- Dropdown Menu -->

		<div class="container mx-auto flex flex-wrap items-center justify-around gap-10">
			<div class="flex flex-col gap-2 mt-20">
				<span>How do you usually spend your weekends?</span>
				<SelectWrapper 
				  client:load
				  name="weekend-activity"
				  placeholder="Select an option"
				  options={weekendOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
	
			<div class="flex flex-col gap-2 mt-20">
				<span>Which of these best describes your style?</span>
				<SelectWrapper 
				  client:load
				  name="best-describe"
				  placeholder="Select an option"
				  options={bestDescribeOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
		</div>

		<div class="container mx-auto flex flex-wrap items-center justify-around gap-10">
			<div class="flex flex-col gap-2 mt-20">
				<span>How do you feel about attention?</span>
				<SelectWrapper 
				  client:load
				  name="attention"
				  placeholder="Select an option"
				  options={attentionOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
	
			<div class="flex flex-col gap-2 mt-20">
				<span>When driving, what is most important to you?</span>
				<SelectWrapper 
				  client:load
				  name="importance-drive"
				  placeholder="Select an option"
				  options={importanceDriveOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
		</div>

		<div class="container mx-auto flex flex-wrap items-center justify-around gap-10">
			<div class="flex flex-col gap-2 mt-20">
				<span>If your life was a movie, what genre would it be?</span>
				<SelectWrapper 
				  client:load
				  name="movie-genre"
				  placeholder="Select an option"
				  options={movieGenreOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
	
			<div class="flex flex-col gap-2 mt-20">
				<span>Which word best describes your personality?</span>
				<SelectWrapper 
				  client:load
				  name="personality"
				  placeholder="Select an option"
				  options={personalityOptions}
				  onChange={(value) => console.log(value)}
				/>
			  </div>
		</div>





		<a href="/results">
			<Button className="bg-secondary hover:bg-primary hover:text-primary-foreground text-destructive font-semibold uppercase my-2">
			Find My Perfect Match
			</Button>
		</a>

	</section>


	<h3 class="lg:text-3xl md:text-2xl text-xl font-bold uppercase text-destructive text-center text-wrap">All Cars</h3>

	


</Layout>
