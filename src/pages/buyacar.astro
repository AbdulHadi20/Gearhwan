const herosection = {
  heading: "Discover Your Ideal Car",
  description: "Find your next ride here!",
};

---

<Layout>

    <main>
		<div class="absolute inset-0 bg-[url('/buyacarheroimg.png')] bg-cover bg-center max-w-screen object-cover h-[75vh]">
